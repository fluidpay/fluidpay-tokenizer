{
  // Editor
  "editor.tabSize": 2,
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  
  // Eslint
  "eslint.validate": ["vue", "html", "javascript", "typescript"],

  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": false,
    "vue": false
  }
}