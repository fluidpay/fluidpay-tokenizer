{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "emitDeclarationOnly": true,
    // "noEmit": false,

    "outDir": "dist",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "tokenizer": ["src/tokenizer"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["src/docs", "src/**/*.spec.ts", "src/**/*.test.ts", "src/**/rollup.config.ts"],
  "include": ["src/tokenizer/**/*.ts", "src/tokenizer/**/*.d.ts", "src/tokenizer/*.vue"]
}
